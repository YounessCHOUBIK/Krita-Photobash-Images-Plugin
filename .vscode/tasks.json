{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Move to Folder",
            "type": "shell",
            "command": "cp -r krita-photobash-images-plugin ~/.local/share/krita/pykrita/ && cp krita-photobash-images-plugin.desktop ~/.local/share/krita/pykrita/",
            "group":  "build"
        },
        {
            "label": "Restart Krita",
            "type": "shell",
            "command": "killall krita && cd ~/krita-dev/install/bin && ./krita",
            "group":  "build"
        },
        {
            "label": "Launch Krita",
            "type": "shell",
            "command": "cd ~/krita-dev/install/bin && ./krita",
            "group":  "build"
        },
    ]
}